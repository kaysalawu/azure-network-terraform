{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Network/virtualNetworks"
      },
      {
        "field": "Microsoft.Resources/subscriptions/resourceGroups/name",
        "equals": "${RESOURCE_GROUP_NAME}"
      },
      {
        "allOf": [
          {
            "field": "tags['lab']",
            "equals": "${LAB_ID}"
          },
          {
            "field": "tags['env']",
            "equals": "prod"
          },
          {
            "anyOf": [
              {
                "field": "tags['nodeType']",
                "equals": "hub"
              }
            ]
          }
        ]
      }
    ]
  },
  "then": {
    "effect": "addToNetworkGroup",
    "details": {
      "networkGroupId": "${NETWORK_GROUP_ID}"
    }
  }
}
